<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingHorizontal="32dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.MainFragment"
    >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="@string/text_detection_explanation"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="@string/object_detection_explanation"
        />

    <Button
        android:id="@+id/button_main_to_camera"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/main_to_camera"
        android:textSize="20sp"
        android:layout_margin="@dimen/main_button_margin"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        />
</LinearLayout>
</androidx.core.widget.NestedScrollView>