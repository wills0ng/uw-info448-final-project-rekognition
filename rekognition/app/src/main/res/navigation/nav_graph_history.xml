<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_history"
    app:startDestination="@id/HistoryFragment"
    >
    <fragment
        android:id="@+id/HistoryFragment"
        android:name="edu.uw.minh2804.rekognition.fragments.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history"
        >
        <action
            android:id="@+id/action_seeHistoryDetails"
            app:destination="@id/HistoryDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/HistoryDetailsFragment"
        android:name="edu.uw.minh2804.rekognition.fragments.HistoryDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_history_details">
        <argument
            android:name="item"
            app:argType="edu.uw.minh2804.rekognition.models.HistoryItem" />
        <action
            android:id="@+id/action_backToHistory"
            app:destination="@id/HistoryFragment" />
    </fragment>
</navigation>