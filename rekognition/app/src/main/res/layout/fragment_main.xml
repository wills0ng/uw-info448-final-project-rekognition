<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        tools:context=".fragments.MainFragment"
        >
        <Space
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="@string/text_detection_explanation"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="@string/object_detection_explanation"
            />
        <Button
            android:id="@+id/button_main_to_camera"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_button_margin"
            android:layout_width="wrap_content"
            android:text="@string/main_to_camera"
            android:textSize="20sp"
            />
        <Space
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>